<% @user ||= current_user %>
<ul class="nav nav-list">
  <li class="nav-header">Favorites</li>
  <% @user.groups.each do |g| %>
    <% if !@group.nil? and @group.name.equal? g.name %>
      <li class=<%= group_class %>>
    <% else %>
      <li>
    <% end %>
    <%= link_to g.name, g %></li>
  <% end %>
</ul>
