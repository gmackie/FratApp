<% provide(:title, @group.name) %>
<h1>
  <%= image_for @group, :size => 128 %>
  <%= @group.name %>
</h1>
<section>
  <%= render 'shared/micropost_form' %>
</section>
<% if @group.microposts.any? %>
  <ol class="microposts">
    <%= render @microposts %>
  </ol>
  <%= will_paginate @microposts %>
<% end %>
