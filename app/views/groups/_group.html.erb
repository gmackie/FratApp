<li>
  <%= image_for group, size: 52 %>
  <%= link_to group.name, group %>
  <% if current_user.admin? %>
    | <%= link_to "delete", group, method: :delete,
                                  data: { confirm: "You sure?" } %>
    | <%= link_to "join", joingroup_path( :name => group.name,
                                          :id => group.id,
                                          :user_id => current_user.id
                                        ) %>
  <% end %>
</li>

