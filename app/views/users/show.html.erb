<% provide(:title, @user.name) %>
    <section>
      <b>Pledge Class:</b>
      <%= @user.pledge_semester +  " " + @user.pledge_year.to_s %>
    </section>
    <section>
      <b>Graduation Year:</b>
      <%= @user.grad_year.to_s %>
    </section>
    <section>
      <b>Major:</b>
      <%= @user.major %>
    </section>
      <% if @user.admin? %>
        <section>
          <%= "Administrator" %>
        </section>
      <% end %>
